<div class="container col-default-12 col-sm-10 col-md-6 col-lg-6 col-xl-5 col-xxl-5" data-controller="sounds-new">
  <%= form_with model: sound do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Name your sound" %>
    <div class="location-input" data-controller="location">

      <%= f.label :location, class: "form-label" %>

      <div class="form-check">
        <input data-action="change->location#hideLocInput" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
        <label class="form-check-label" for="flexRadioDefault1">
          Use My Location
        </label>
      </div>

      <div class="form-check">
        <input data-action="change->location#showLocInput" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label" for="flexRadioDefault2">
          Enter A Location Manually
        </label>
      </div>

      <%= f.text_field :location, class: "form-control d-none", data: { target: "location.input"}, placeholder: "Enter an address..." %>
    </div>
    <%= f.label :audio, class: "form-label" %>
    <div class="audio_upload input-group mb-3">
      <div class="btn btn-dark border rounded-5" id='audio-record-button'>
        <i class="fa-solid fa-microphone"></i>
      </div>
      <%= f.file_field :audio, direct_upload: true, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
