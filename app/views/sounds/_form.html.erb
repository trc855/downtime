<div class="container" data-controller="sounds-new">
  <%= form_with model: sound do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :location, class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
    <%= f.label :audio, class: "form-label" %>
    <div class="audio_upload input-group mb-3">
      <div class="btn btn-danger" id='audio-record-button'>Record</div>
      <%= f.file_field :audio, direct_upload: true, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
